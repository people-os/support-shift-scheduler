  },
  "author": "Balena",
  "contributors": [
    "Alida Odendaal (@AlidaOdendaal)",
    "Alexandros Marinos (@alexandrosm)",
    "Petros Angelatos (@petrosagg)",
    "Kostas Lekkas (@lekkas)"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "bluebird": "^3.7.2",
    "dateformat": "^3.0.3",
    "dotenv": "^8.2.0",
    "googleapis": "^45.0.0",
    "jsonschema": "^1.4.0",
    "lodash": "^4.17.21",
    "log": "^6.0.0",
    "mkdirp": "^0.5.1",
    "mz": "^2.7.0",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@balena/lint": "^5.4.1",
    "husky": "^3.1.0",
    "lint-staged": "^10.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
