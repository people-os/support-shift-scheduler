{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"outDir": "./build/",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"strict": true
	},
	"include": ["lib", "helper-scripts"]
}
